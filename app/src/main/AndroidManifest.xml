<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ubu.lmi.gii170j">

    <!-- Permiso para poder Acceder a imagenes de nuestra galeria -->
    <!-- <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> -->
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".interfaz.Launcher" />
        <activity
            android:name=".interfaz.Registro"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".interfaz.MenuPrincipal"
            android:label="@string/title_activity_menu_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".interfaz.RegistroGlucemias"
            android:label="@string/title_activity_registro_glucemias"
            android:parentActivityName=".interfaz.MenuPrincipal"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ubu.lmi.gii170j.interfaz.MenuPrincipal" />
        </activity>
        <activity
            android:name=".interfaz.Incidencias"
            android:label="@string/title_activity_incidencias"
            android:parentActivityName=".interfaz.RegistroGlucemias"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ubu.lmi.gii170j.interfaz.RegistroGlucemias" />
        </activity>
        <activity
            android:name=".interfaz.Historial"
            android:label="@string/title_activity_historial"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".interfaz.MenuPrincipal" />
        </activity>

        <activity
            android:name=".interfaz.Carbohidratos"
            android:label="@string/title_activity_carbohidratos"
            android:parentActivityName=".interfaz.RegistroGlucemias"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".interfaz.RegistroGlucemias" />
        </activity>
        <activity
            android:name=".interfaz.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".interfaz.Pruebas_Main" />
        <activity
            android:name=".interfaz.RegistroListaIngesta"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_registro_lista_ingesta"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".interfaz.MenuPrincipal" />
        </activity>
        <activity
            android:name=".interfaz.ConsultaDetallesListaIngesta"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_detalles__lista_ingesta"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".interfaz.RegistroListaIngesta" />
        </activity>
    </application>

</manifest>